#include <iostream>
#include <fstream>
#include <ctype.h>
#include <string>
using namespace std;

int main()
{
    system("chcp 1251");
    //Задание №1
    cout << "Задание №1\n";
    ofstream filein("file.txt");
    filein << "3759360461";
    filein.close();
    string stroka1;
    int sum1 = 0;
    ifstream fileout("file.txt");
    if (!fileout.is_open()) {
        cout << "Файл не может быть открыт\n";
    } else {
        getline(fileout, stroka1);
        for (int i = 0; i < stroka1.length(); i++) {
            if (isdigit(stroka1[i])) {
                sum1 = sum1 + (stroka1[i]-48);
            }
        }
    }
    cout << sum1;
    //Задание №2
    cout << "Задание №2\n";
    int a1;
    void Function2(int x) {
        int sign;
        if (x > 0) {
            sign = 1;
        } else if (x=0) {
            sign = 0;
        } else {
            sign = -1;
        }
        cout << sign;
    }
    cin >> a1;
    Function2(a1);
    //Задание №3
    cout << "Задание №3\n";
}
